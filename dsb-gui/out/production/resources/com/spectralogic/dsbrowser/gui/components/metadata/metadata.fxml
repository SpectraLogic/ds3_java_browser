<VBox fx:id="metadataVBox" maxHeight="100000" maxWidth="100000" minHeight="1.0" minWidth="1.0" prefHeight="300.0" prefWidth="600.0" spacing="10.0" stylesheets="@../../common.css" xmlns="http://javafx.com/javafx/8.0.102" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.spectralogic.dsbrowser.gui.components.metadata.MetadataPresenter">
    <children>
        <HBox fx:id="metadataHbox" prefWidth="440.0" spacing="10.0">
            <children>
                <Label prefHeight="17.0" prefWidth="85.0" text="Name:">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Label>
                <Label fx:id="objectName" prefHeight="17.0" prefWidth="482.0">
                    <tooltip>
                        <Tooltip fx:id="nameTooltip" />
                    </tooltip>
                </Label>
            </children>
        </HBox>
        <HBox spacing="10.0">
            <children>
                <Label prefHeight="17.0" prefWidth="85.0" text="Size:">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Label>
                <Label fx:id="objectSize" prefHeight="17.0" prefWidth="399.0" />
            </children>
        </HBox>
        <HBox spacing="10.0">
            <children>
                <Label prefHeight="17.0" prefWidth="85.0" text="Last Modified:">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Label>
                <Label fx:id="lastModified" prefHeight="17.0" prefWidth="399.0" />
            </children>
        </HBox>
        <TableView fx:id="metadataTable" prefHeight="280.0" prefWidth="500.0" style="-fx-wrap-text: true;">
            <columns>
                <TableColumn fx:id="metadataTableColName" maxWidth="340.0" minWidth="-1.0" prefWidth="134.0">
                    <cellValueFactory>
                        <PropertyValueFactory property="key" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="metadataTableColValue" editable="true" maxWidth="1000.0" minWidth="-1.0" prefWidth="444.0">
                    <cellValueFactory>
                        <PropertyValueFactory property="value" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </TableView>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
